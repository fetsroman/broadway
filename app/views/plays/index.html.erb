<h3 class="current-category"><%= params[:category] %></h3>

<% if @plays.count == 0 %>
  <h3>There are no plays in this category</h3>
<% else %>
  <div class="row">
    <% @plays.each do |play| %>
      <div class="col-md-3">
        <div class="card" style="width: 18rem;">
          <%= image_tag play.image_url, class: "card-img-top" %>
          <div class="card-body">
            <h5 class="card-title"><%= play.title %></h5>
            <p class="card-text"><%= play.description %></p>
            <%= link_to "View Post", play, class:"btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
