<%= simple_form_for([@play, @play.reviews.build]) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div id="rating-form">
    <%= f.input :rating %>
  </div>
  
  <%= f.input :comment %>
  <%= f.button :submit, class: "btn-custom2" %>
<% end %>
